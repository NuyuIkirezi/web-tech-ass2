<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
         https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0"
         metadata-complete="true">

    <display-name>Servlet Assignments</display-name>

    <welcome-file-list>
        <welcome-file>assignment1-login.html</welcome-file>
    </welcome-file-list>

    <!-- LoginServlet - Assignment 1 -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.afanyu.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <!-- SearchRedirectServlet - Assignment 2 -->
    <servlet>
        <servlet-name>SearchRedirectServlet</servlet-name>
        <servlet-class>com.afanyu.servlets.SearchRedirectServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SearchRedirectServlet</servlet-name>
        <url-pattern>/SearchRedirectServlet</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>